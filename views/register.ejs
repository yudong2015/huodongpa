<% include header.ejs %>
    <header class="header">
        <h1>注册</h1>
        <i class="de-avatar"></i>
    </header>
    <div class="content register-ct">
        <div class="photo-btn">
            <div class="camera-box">
                <img src="../img/camera.png" alt="学术葩">
            </div>
        </div>
        <form id="register-form" method="POST">
        <p class="photo-tips">请上传属于自己的头像</p>
        <input type="hidden" name="avatar">
        <div class="form-panel">
            <div class="input-panel">
                <div class="form-group">
                    <input required type="text" placeholder="手机号" name="username" id="user-phone">
                </div>
                <div class="form-group">
                    <input required type="password" placeholder="密码" name="password" >
                </div>
                <div class="form-group">
                    <input required type="text" placeholder="验证码" name="code" >
                    <div class="send-btn" id="send-code">发送</div>
                </div>
            </div>
            <div class="y-lar-btn">
                <div class="m-bg">
                    <div class="btn-box" id="register-form-submit">注册</div>
                </div>
            </div>
        </div>
        </form>
    </div>
    <script src="/thirdparty/validate/validate.min.js"></script>
    <script src="/js/register.js"></script>
<% include footer.ejs %>