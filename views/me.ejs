<% include header.ejs %>
    <div class="header-panel">
        <header class="header">
            <h1>我的帐号</h1>
            
        </header>
    </div>
    <div class="content user-ct">
        <div class="user-center-box">
            <div class="left-box">
                <div class="avatar-pic">
                    <img src="<%if (user.avatar){%><%=user.avatar%><%}else{%>../img/de-avatar.png<%}%>" alt="avatar">
                </div>
                <div class="user-info">
                    <h3 class="ellipsis">村上春指数<%=user.name%></h3>
                    <p class="ellipsis">手机号：<%=user.username%></p>
                </div>
            </div>
            <div class="right-box anchor" data-href="/me/edit"></div>
        </div>
        <div class="user-title"><i></i>我的听课证</div>
        <ul class="user-list">
            <li class="next-l anchor" data-href="/cards?scope=register">即将开始</li>
            <li class="next-l anchor" data-href="/cards?scope=inclass">正在举办</li>
            <li class="next-l anchor" data-href="/cards?scope=end">活动结束</li>
            <li class="next-l anchor" data-href="/cards?scope=canceled">活动取消</li>
        </ul>
        <ul class="user-list">
            <li class="next-l anchor" data-href="/syllabus">我的日程表</li>
            <li class="next-l anchor" data-href="/syllabus">推荐我的名片</li>
        </ul>
        <ul class="user-list">
            <li class="flex-l">
                <div>我的学校</div>
                <div><%=user.school%></div>
            </li>
            <li class="flex-l">
                <div>紧急联系电话</div>
                <div><%=user.emergencyPhone%></div>
            </li>
        </ul>
