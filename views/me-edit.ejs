<% include header.ejs %>
    <div class="header-panel">
        <header class="header">
            <div class="back-cancel-btn anchor" data-href="/me">取消</div>
            <h1>编辑账号</h1>
        </header>
    </div>
    <div class="content register-ct edit-ct">
        <div class="photo-btn" id="pickfiles">
            <%if (user.avatar == '') {%>
            <div class="camera-box">
                <img src="../img/camera.png" alt="学术葩">
            </div>
            <%} else {%>
            <img src="<%=user.avatar%>">
            <% } %>
        </div>
        <p class="photo-tips">请上传属于自己的头像</p>
        <input type="hidden" id="qiniu-domain" value="<%=qiniuDomain%>">
        <form class="form-panel" id="user-profile-form" method="POST">
            <input type="hidden" id="avatar-url" name="avatar" value="<%=user.avatar%>">
            <div class="input-panel">
                <div class="form-group">
                    <input type="text" placeholder="真实姓名" name="name" value="<%=user.name%>">
                    <i class="require-tips">*</i>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="紧急联系电话" name="emergencyPhone" value="<%=user.emergencyPhone%>" >
                    <i class="require-tips">*</i>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="我的住址" name="address" value="<%=user.address%>" >
                    <i class="require-tips">*</i>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="常用邮箱" name="email" value="<%=user.email%>" >
                </div>
                <div class="form-group">
                    <input type="text" placeholder="我的生日" name="birthday" value="<%=user.birthday%>" >
                </div>
                <div class="form-group">
                    <input type="text" placeholder="我的学校" name="school" value="<%=user.school%>" >
                </div>
                <div class="form-group">
                    <input type="text" placeholder="我的年级" name="grade" value="<%=user.grade%>" >
                </div>
            </div>
            <div class="y-lar-btn">
                <div class="m-bg">
                    <div class="btn-box">保存信息</div>
                </div>
            </div>
        </form>
    </div>
    <script src="/thirdparty/validate/validate.min.js"></script>
    <script src="/thirdparty/pupload/plupload.full.min.js"></script>
    <script src="/thirdparty/qiniu/qiniu.min.js"></script>
    <script src="/js/me.js"></script>

<% include footer.ejs %>