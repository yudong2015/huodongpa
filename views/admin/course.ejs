<% include header.ejs %>
  <div class="helper-bar">
    <ol class="breadcrumb">
      <li><a href="/admin/courses">课程管理</a></li>
      <li class="active">新增课程</li>
    </ol>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <form class="form-horizontal">
    <div class="form-group">
      <label for="courseID" class="col-sm-2 control-label">课程编号</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control" name="id" placeholder="课程编号">
      </div>
    </div>
    <div class="form-group">
      <label for="courseName" class="col-sm-2 control-label">课程名称</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" placeholder="课程名称">
      </div>
    </div>
    <div class="form-group">
      <label for="courseCategory" class="col-sm-2 control-label">课程分类</label>
      <div class="col-sm-6">
        <select class="form-control" name="categoryId" id="course-categories">
        </select>
        
      </div>
      <div class="col-sm-4">
        <div class="col-xs-8">
          <input type="text" class="form-control" placeholder="分类名称" id="new-category-name"> 
        </div>
        <div class="col-xs-4">
        <a class="btn btn-success" id="add-category">新增</a>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="courseDescription" class="col-sm-2 control-label">课程简介</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="description" rows="3"></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">保存</button>
      </div>
    </div>
    </form>
    </div>
    <div class="col-md-2"></div>
  </div>
<% include footer.ejs %>