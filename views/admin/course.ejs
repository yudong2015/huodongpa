<% include header.ejs %>
<input type="hidden" id="qiniu-domain" value="<%=qiniuDomain%>">
<div class="helper-bar">
    <ol class="breadcrumb">
        <li><a href="/admin/courses">活动管理</a></li>
        <% if(action == 'edit') { %>
        <li class="active">编辑活动</li>
        <% } else { %>
        <li class="active">新增活动</li>
        <% } %>
    </ol>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form class="form-horizontal" method="POST">
            <% if(action == 'edit') { %>
            <div class="form-group">
                <label for="courseID" class="col-sm-2 control-label">活动编号</label>

                <div class="col-sm-10">
                    <input type="text" readonly class="form-control" name="id" placeholder="活动编号"
                           value="<%= course.id %>">
                </div>
            </div>
            <% } %>
            <div class="form-group">
                <label for="courseName" class="col-sm-2 control-label">活动名称</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" placeholder="活动名称"
                           <% if (action == 'edit'){ %>value="<%= course.name %>"
                            <% } %>
                             required >
                </div>
            </div>

            <div class="form-group">
                <label for="courseCategory" class="col-sm-2 control-label">活动分类</label>

                <div class="col-sm-6">
                    <select class="form-control" name="categoryId" id="course-categories"
                            <% if (action == 'edit'){ %>data-id="<%= course.categoryId %>"
                            <% } %>
                            >
                    </select>

                </div>
                <div class="col-sm-4">
                    <div class="col-xs-8 text-right" style="padding-right:0">
                        <input type="text" class="form-control" placeholder="分类名称" id="new-category-name">
                    </div>
                    <div class="col-xs-4 text-right" style="padding-right:0">
                        <a class="btn btn-success" id="add-category">新增</a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="courseDescription" class="col-sm-2 control-label">活动简介</label>

                <div class="col-sm-10">
                    <textarea class="form-control" name="description" rows="20"><% if (action == 'edit'){ %><%= course.description %><% } %></textarea>
                    <% if (action == 'edit'){ %>
                    <input type="hidden" name="managerId" value="<%=course.managerId%>"/>
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <label for="courseDescription" class="col-sm-2 control-label">活动海报</label>

                <div class="col-sm-10" id="container">
                    <input type="hidden" id="avatar-url-input"  name="avatar"
                           <%if (action=='edit'){%>value="<%=course.avatar?course.avatar:'/img/preview.png'%>" <%}%>
                            />
                    <img id="avatar-url"
                         <%if (action=='edit'){%>src="<%=course.avatar?course.avatar:'/img/preview.png'%>" <%}%>
                         width="100%" alt=""/>
                    <a class="btn btn-success" id="pickfiles" href="#" >
                        <i class="glyphicon glyphicon-plus"></i>
                        <span>上传海报</span>
                    </a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">保存</button>
                    <button type="submit" class="btn btn-primary">保存并新增场次</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
<% include footer.ejs %>