<% include header.ejs %>
  <input type="hidden" id="qiniu-domain" value="<%=qiniuDomain%>">
  <div class="helper-bar">
    <ol class="breadcrumb">
      <li><a href="/admin/teachers">讲师管理</a></li>
      <% if(action == 'edit') { %>
      <li class="active">编辑讲师</li>
      <% } else {%>
      <li class="active">新增讲师</li>
      <% } %>
    </ol>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <form class="form-horizontal" method="POST">
    <% if(action == 'edit') { %>
    <div class="form-group">
      <label for="teacherID" class="col-sm-2 control-label">讲师编号</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control" name="id" placeholder="活动编号" value="<%=teacher.id%>">
      </div>
    </div>
    <% } %>
    <div class="form-group">
      <label for="teacherName" class="col-sm-2 control-label">讲师名称</label>
      <div class="col-sm-10">
        <input type="text" required class="form-control" name="name" placeholder="讲师名称" <%if (action=='edit'){%>value="<%=teacher.name%>"<%}%>>
      </div>
    </div>
    <div class="form-group">
      <label for="teacherAvatar" class="col-sm-2 control-label">讲师头像</label>
      <div class="col-sm-2" id="container">
        <a class="btn btn-success" id="pickfiles" href="#" >
          <i class="glyphicon glyphicon-plus"></i>
          <span>上传头像</span>
        </a>
      </div>
      <div class="col-sm-8">
        <input type="text" class="form-control image-popover" required readonly id="avatar-url" name="avatar" <%if (action=='edit'){%>value="<%=teacher.avatar?teacher.avatar:'暂无'%>" data-href="<%=teacher.avatar?teacher.avatar:''%>"<%}%>>
      </div>

    </div>
    <div class="form-group">
      <label for="teacherDescription" class="col-sm-2 control-label">讲师简介</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="description" rows="20"><%if (action=='edit'){%><%=teacher.description%><%}%></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">保存</button>
      </div>
    </div>
    </form>
    </div>
    <div class="col-md-2"></div>
  </div>
<% include footer.ejs %>