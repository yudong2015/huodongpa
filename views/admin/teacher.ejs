<% include header.ejs %>
  <div class="helper-bar">
    <ol class="breadcrumb">
      <li><a href="/admin/teachers">主人管理</a></li>
      <% if(action == 'edit') { %>
      <li class="active">编辑主人</li>
      <% } else {%>
      <li class="active">新增主人</li>
      <% } %>
    </ol>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <form class="form-horizontal" method="POST">
    <% if(action == 'edit') { %>
    <div class="form-group">
      <label for="teacherID" class="col-sm-2 control-label">主人编号</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control" name="id" placeholder="课程编号" value="<%=teacher.id%>">
      </div>
    </div>
    <% } %>
    <div class="form-group">
      <label for="teacherName" class="col-sm-2 control-label">主人名称</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" placeholder="主人名称" <%if (action=='edit'){%>value="<%=teacher.name%>"<%}%>>
      </div>
    </div>
    <div class="form-group">
      <label for="teacherAvatar" class="col-sm-2 control-label">主人头像</label>
      <div class="col-sm-10">
        <input type="file" class="form-control" placeholder="主人头像">
        <input type="hidden" name="avatar" <%if (action=='edit'){%>value="<%=teacher.avatar%>"<%}%>>
      </div>
    </div>
    <div class="form-group">
      <label for="teacherDescription" class="col-sm-2 control-label">主人简介</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="description" rows="3"><%if (action=='edit'){%><%=teacher.description%><%}%></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">保存</button>
      </div>
    </div>
    </form>
    </div>
    <div class="col-md-2"></div>
  </div>
<% include footer.ejs %>